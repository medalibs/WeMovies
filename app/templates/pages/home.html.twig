{% extends 'base.html.twig' %}

{% block title %}We Movies{% endblock %}

{% block body %}
    <!-- Header -->
    {% include 'layouts/header.html.twig' %}
    <!-- Image en pleine largeur -->
    {% include 'layouts/hero_image.html.twig' %}

    <!-- Conteneur principal -->
    <div class="container mx-auto mt-6 flex space-x-6">
        <!-- Menu -->
        {% include 'layouts/sidebar_genres.html.twig' %}

        <!-- List -->
        <main class="w-3/4 bg-white p-6 rounded-lg shadow-md">
            {% for movie in movies.all %}
                {% include 'components/card.html.twig' with { 'movie': movie } %}
            {% endfor %}

            <!-- Modal -->
            {% include 'layouts/modal.html.twig' %}

        </main>
    </div>
    {% include 'layouts/footer.html.twig' %}
{% endblock %}
