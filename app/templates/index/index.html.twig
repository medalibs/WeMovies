{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
    <!-- Header -->
    <header class="bg-white p-4 shadow-md flex justify-between items-center">
        <!-- Lien "À propos" -->
        <a href="#a-propos" class="text-blue-500 font-semibold">À propos</a>
        <!-- Champ de recherche avec autocomplete -->
        <input
                type="text"
                placeholder="Rechercher..."
                class="w-1/3 p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                list="suggestions"
        />
        <!-- Suggestions pour l'autocomplete -->
        <datalist id="suggestions">
            <option value="Exemple 1"></option>
            <option value="Exemple 2"></option>
            <option value="Exemple 3"></option>
        </datalist>
    </header>
    <!-- Image en pleine largeur -->
    <div class="container mx-auto mt-6">
        <img src="{{ movies.bestMovie.backDropPath }}" alt="Image placeholder" class="w-full h-auto rounded-lg shadow-lg max-h-80">
    </div>

    <!-- Conteneur principal -->
    <div class="container mx-auto mt-6 flex space-x-6">
        <!-- Menu à gauche -->
        <aside class="w-1/4 bg-white p-4 rounded-lg shadow-md">
            <nav>
                <div class="flex flex-col gap-2">
                    {% for genre in genres %}
                    <div>
                        <label class="inline-flex items-center" for="indigoCheckBox">
                            <input id="indigoCheckBox" type="checkbox" class="w-4 h-4 accent-indigo-700">
                            <span class="ml-2">{{ genre.name }}</span>
                        </label>
                    </div>
                    {% endfor %}
                </div>
            </nav>
        </aside>

        <!-- Conteneur principal à droite -->
        <main class="w-3/4 bg-white p-6 rounded-lg shadow-md">
            {% for movie in movies.all %}
                <div class="max-w-md mx-auto bg-gray-200 rounded-xl shadow-md overflow-hidden md:max-w-2xl mt-2">
                    <div class="md:flex">
                        <div class="md:shrink-0 flex justify-center">
                            <img class="w-full object-cover md:w-32" src="{{ movie.posterPath }}">
                        </div>
                        <div class="p-4">
                            <div class="mt-4 flex items-center">
                                <div class="uppercase tracking-wide text-sm text-indigo-500 font-semibold">{{ movie.title }}</div>
                                {% for i in 0..4 %}
                                    <svg class="h-5 w-5 {% if i < movie.rate %}text-yellow-400{% else %}text-gray-400{% endif %}" fill="currentColor" viewBox="0 0 20 20">
                                        <path
                                                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z">
                                        </path>
                                    </svg>
                                {% endfor %}
                                <span class="text-slate-600 text-sm ml-2"> ({{ movie.voteCount }} votes)</span>
                            </div>
                            <div class="mt-4">
                                <span class="text-slate-900 font-bold">{{ movie.year }}</span>
                                <span class="text-slate-900 font-bold"> - </span>
                                <span class="text-slate-600 text-sm ml-2">Disney, Pixar</span>
                            </div>
                            <p class="mt-2 text-slate-500">{{ movie.description }}</p>
                            <div class="flex justify-end">
                                <button class="rounded-2xl bg-indigo-600 px-4 py-2 font-bold leading-none text-white">Lire le détail</button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}





        </main>
    </div>

{% endblock %}
