<aside class="w-1/4 bg-white p-4 rounded-lg shadow-md">
    <nav>
        <div class="flex flex-col gap-2">
            {% for genre in genres %}
                <div>
                    <label class="inline-flex items-center" for="indigoCheckBox">
                        <input id="indigoCheckBox" type="checkbox" class="w-4 h-4 accent-indigo-700">
                        <span class="ml-2 genre">{{ genre.name }}</span>
                    </label>
                </div>
            {% endfor %}
        </div>
    </nav>
</aside>
